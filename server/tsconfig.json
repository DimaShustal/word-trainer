{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
